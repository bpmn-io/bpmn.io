
<style>

:root {
  --cc-banner-color: #000600;
  --cc-banner-color-bg: #ffc600;

  --cc-banner-color-button: white;
  --cc-banner-color-button-bg: #FC5D0D;

  --cc-banner-color-button-hover: white;
  --cc-banner-color-button-hover-bg: #434343;
}

.cc-banner {
  background-color: var(--cc-banner-color-bg);
  color: inherit;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 10px;
}

.cc-banner-left {
  flex-basis: 0;
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.cc-banner .heading {
  margin: 0;
  font-size: 16px;
  font-weight: normal;
  color: var(--cc-banner-color);
}

.cc-banner .register-link {
  display: block;
  background-color: var(--cc-banner-color-button-bg);
  color: var(--cc-banner-color-button);
  padding: 10px 16px;
  font-weight: bold;
  border-radius: 12px;
  text-decoration: none;
  margin: 0 1em;
}

.cc-banner .register-link:hover {
  background-color: var(--cc-banner-color-button-hover-bg);
  color: var(--cc-banner-color-button-hover);
}

.cc-banner .close {
  background-color: transparent;
  border: none;
  padding: 10px;
  margin: 0;
  cursor: pointer;
  display: flex;
  align-items: center;
  fill: white;
}

@media screen and (max-width: 768px) {
  .cc-banner-left {
    align-items: start;
    flex-direction: column;
  }

  .cc-banner .register-link {
    margin: 1em 0;
  }

  .cc-banner .heading {
    margin-top: 1em;
  }
}
</style>

<script>
  function getCookie(name) {
    let matches = document.cookie.match(new RegExp(
      "(?:^|; )" + name.replace(/([\.$?*|{}\(\)\[\]\\\/\+^])/g, '\\$1') + "=([^;]*)"
    ));

    return matches ? decodeURIComponent(matches[1]) : undefined;
  }

  function setCookie() {
    document.cookie = "hideCCBanner=true;path=/;expires=Fri, 29 Sep 2023 00:00:00 GMT";
  }

  function hideBanner() {
    document.querySelector('.cc-banner').style.display = 'none';
  }

  function dismissBanner() {
    hideBanner();

    setCookie();
  }

  document.addEventListener("DOMContentLoaded", () => {
    if (getCookie('hideCCBanner')) {
      hideBanner();
    }
  });
</script>

